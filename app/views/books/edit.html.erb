<h1>Editing Book</h1>

<% if @book.errors.any? %>
  We have found <%= @book.errors.count %> errors.
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

  <%= link_to "Show", "/books/#{@book.id}" %> | <%= link_to "Back", href = "/books" %>

<% end %>